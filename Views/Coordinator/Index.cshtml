@model List<CMCS.Models.Claim>

@{
    ViewData["Title"] = "Pending Claims - Coordinator";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Coordinator – Pending Claims</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Lecturer</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total (R)</th>
                <th>Submitted</th>
                <th>Status</th>
                <th>Document</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var claim in Model)
            {
                bool isSuspicious =
                claim.HoursWorked > 160 ||
                claim.HourlyRate > 1000 ||
                (Convert.ToDecimal(claim.HoursWorked) * claim.HourlyRate) > 30000                ||
                string.IsNullOrEmpty(claim.Notes) ||
                string.IsNullOrEmpty(claim.FileName);

                <tr class="@(isSuspicious ? "table-warning" : "")">
                    <td>@claim.Id</td>
                    <td>@claim.LecturerName</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@((Convert.ToDecimal(claim.HoursWorked) * claim.HourlyRate).ToString("F2"))</td>
                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                    <td>@claim.Status</td>

                    <td>
                        @if (!string.IsNullOrEmpty(claim.FileName))
                        {
                            <span class="badge bg-success">Uploaded</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">None</span>
                        }
                    </td>

                    <td>
                        <form asp-action="Approve" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>

                        <form asp-action="Reject" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button class="btn btn-sm btn-danger">Reject</button>
                        </form>

                        @if (isSuspicious)
                        {
                            <span class="badge bg-warning text-dark ms-2">⚠ Suspicious</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
