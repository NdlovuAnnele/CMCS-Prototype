@model CMCS.Models.ErrorViewModel
@{
    ViewData["Title"] = "An error occurred";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Oops! Something went wrong.</h4>
                </div>
                <div class="card-body">
                    <p>
                        An unexpected error occurred while processing your request.
                        Please try again, or contact the system administrator if the problem persists.
                    </p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["Error"]
                        </div>
                    }

                    @if (Model?.ShowRequestId == true)
                    {
                        <p class="text-muted small">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        Return to Home
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
