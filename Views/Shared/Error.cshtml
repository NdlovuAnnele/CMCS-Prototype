@model CMCS.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <h1 class="text-danger mb-3">Oops! Something went wrong.</h1>
    <h4>An unexpected error occurred while processing your request.</h4>
    <p class="text-muted mt-2">Please try again later, or contact support if the problem persists.</p>

    @if (Model.ShowRequestId)
    {
        <p class="mt-3 text-secondary">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a href="/" class="btn btn-primary mt-4 px-4">Return to Home</a>
</div>

@section Scripts {
    <script>
        console.error("An error occurred on this page. If this happens again, please report it with the Request ID.");
    </script>
}
