@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Academic Manager Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Academic Manager - Pending Claims</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <table class="table table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total</th>
                <th>Notes</th>
                <th>Submitted</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Id</td>
                    <td>@claim.HoursWorked</td>
                    <td>R @claim.HourlyRate</td>
                    <td><strong>R @(claim.HoursWorked * (double)claim.HourlyRate)</strong></td>
                    <td>@claim.Notes</td>
                    <td>@claim.SubmissionDate.ToShortDateString()</td>
                    <td>
                        <form method="post" asp-action="Approve" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form method="post" asp-action="Reject" class="d-inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
