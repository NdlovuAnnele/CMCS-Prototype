@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Lecturer Dashboard</h2>

    <div class="card shadow-sm p-4 mb-4">
        <p>Welcome! You can submit and track your monthly claims below.</p>
        <a href="/Lecturer/SubmitClaim" class="btn btn-success w-100 py-2 fs-5">+ Submit New Claim</a>
    </div>

    <div class="card shadow-sm p-4">
        <h4>Your Recent Claims</h4>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Month</th>
                    <th>Hours Worked</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>August 2025</td>
                    <td>20</td>
                    <td><span class="badge bg-success">Approved</span></td>
                </tr>
                <tr>
                    <td>September 2025</td>
                    <td>15</td>
                    <td><span class="badge bg-warning text-dark">Pending</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
